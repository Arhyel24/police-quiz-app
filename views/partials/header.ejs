    <style>
        body {
    /* background-image: url(".../images/OQCI8I0.jpg"); */
    background-image: url("https://cdn.dribbble.com/users/61784/screenshots/3539373/media/7b4f3daee2d1a17ab60dbe05652cbae9.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    font-family: Arial, sans-serif;
    margin: 20px;
    display: grid;
    place-items: center;
    height: 100vh;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    font-size: 1.5rem;
  }
  
  h1 {
    text-align: center;
  }
  
  .question {
    margin-bottom: 20px;
  }
  
  ul {
    list-style-type: none;
    padding: 0;
  }
  
  li {
    margin-bottom: 10px;
  }
  
  #submitBtn {
    display: block;
    margin: 20px auto;
  }

  footer {
    width: 100%;
    background-color: var(--body-color);
    padding: .5rem;
    font-size: 1.2rem;
    bottom: 0;

  }

  form {
    width: 100%;
  }

  label {
    margin: 1rem 0;
  }

  .questiontext {
    height: 4rem;
  }

  .card {
    width: 300px;
    /* height: 500px; */
    border-radius: 20px;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, .35);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 8px 18px 0 rgba(31, 38, 135, 0.37);
  }  

  /* Login section */

  .login {
    width: 300px;
    /* height: 500px; */
    border-radius: 20px;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, .35);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 8px 18px 0 rgba(31, 38, 135, 0.37);
  }

  input[type="text"], textarea {
    display: block;
    outline: none;
    border-radius: 5px;
    border: 2px solid #dadada;
    padding: .7rem .3rem;
    width: 95%;
    transition: .5s ease-in-out;
    margin-bottom: 1.5rem;
  }

  input[type="text"]:focus,  textarea:focus{
    border: 2px solid #1260cc
  }

  .login form {
    width: 100%;
    padding: .2rem;
  }

  .btn {
    display: block;
    padding: .5rem;
    margin: .7rem 0;
    background-color: #1260cc;
    border-radius: 5px;
    border: none;
    font-size: 1.1rem;
    color: #fff;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
  }

  .btn:hover {
    background-color: #29c5fc;
  }

  .btn-block {
    width: 100%;
  }

  .leaderboard {
    width: 100%;
  }

  .leaderboard h2 {
    text-align: center;
  }

  .item-4{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #dadada;
}

.text {
    display: flex;
    align-items: center;
}

.text p {
    padding: .5rem;
    margin: 0;
}
.num {
    border-right: 1px solid #dadada;
}

.buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

body {
    
}

main {
    width: 100%;
    display: flex;
    justify-content: center;
}

.container {
    display: flex;
    width: 80%;
    padding: 2rem;
}


.legend-box{
    width: 30%;
    padding: 1rem;
    font-size: 1rem;
    font-weight: bold;
} 

.questions-side {
    width: 70%;
    padding: .5rem;
    height: fit-content;
    border: 1px solid black;
    border-radius: 10px;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    background: rgba(255, 255, 255, .35);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 5px 10px 0 rgba(31, 38, 135, 0.37);
}
.legend-box {
    display: flex;
    flex-direction: column;
}

.l-box {
    width: 80%;
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
}

.l-box a {
    text-decoration: none;
    border: 1px solid black;
    width: 2rem;
    height: 2rem;
    text-align: center;
    border-radius: 5px;
    background-color: rgba(206, 205, 205, 0.938);
    color: #000;
}

li.optionlist {
    margin: .5rem 0;
    padding: .5rem 0;
}

@media screen and (max-width: 800px) {
    .container {
        width: 100%;
        flex-direction: column-reverse;
    }

    .legend-box, .questions-side {
        width: 100%;
    }

    .legend-box {
        justify-content: center;
    } 

    .l-box {
      width: 100%;
    }
}
