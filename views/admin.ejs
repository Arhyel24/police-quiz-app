<%- include('partials/header.ejs') %>

<div class="card card2">
      
        <h2>Add Questions</h2>
        <!-- Form to add more questions -->
            <form action="/admin/questions" method="post">
                <label for="question">Question</label>
                <textarea name="question"  cols="30" rows="10" required></textarea>
                <label for="option1">Option1</label>
                <input type="text" name="option1" autocomplete="off" required>
                <label for="option2">Option2</label>
                <input type="text" name="option2" autocomplete="off" required>
                <label for="Option3">Option3</label>
                <input type="text" name="option3" autocomplete="off" required>
                <label for="Option4">Option4</label>
                <input type="text" name="option4" autocomplete="off" required>
                <label for="answer">Correct Answer</label>
                <input type="text" name="answer" autocomplete="off" required>
        
                <button type="submit" class="btn btn-block">Add Question</button>
        
            </form>
             <!-- Form to delete all users -->
            <h2>Delete all users</h2>
        <form action="/admin/deleteUsers" method="post">
            <button type="submit" class="btn btn-block">Delete All Users</button>
          </form>
</div>

       

